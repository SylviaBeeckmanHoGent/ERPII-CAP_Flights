<mvc:View controllerName="hogent.flightapp.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form">
  <Page id="page"
    title="Detail">
    <VBox id="vbxMain">
      <Text id="txtCarrId"
        text="Airline: {v2model>carrID}" />
      <Text id="txtConnId"
        text="Connection: {v2model>connID}" />
      <Text id="txtFLDate"
        text="Flight Date: {v2model>fldate}" />
    </VBox>
  </Page>
</mvc:View>
