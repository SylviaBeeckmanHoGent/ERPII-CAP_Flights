<mvc:View controllerName="hogent.flightapp.controller.List"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  displayBlock="true"
  xmlns="sap.m">
  <Page id="page"
    title="{i18n>title}">

    <f:SimpleForm id="SimpleFormChange354"
      editable="true"
      layout="ResponsiveGridLayout"
      title="Address"
      labelSpanXL="3"
      labelSpanL="3"
      labelSpanM="3"
      labelSpanS="12"
      adjustLabelSpan="false"
      emptySpanXL="4"
      emptySpanL="4"
      emptySpanM="4"
      emptySpanS="0"
      columnsXL="1"
      columnsL="1"
      columnsM="1"
      singleContainerFullSize="false">
      <f:content>
        <Label id="_IDGenLabel1"
          text="Airline" />
        <Input id="inCarrID"
          value="{form>/carrID}" />
        <Label id="_IDGenLabel2"
          text="Connection" />
        <Input id="inConnID"
          value="{form>/connID}">
        </Input>
        <DatePicker id="DP1"
          placeholder="Enter Date"
          change="handleChange"
          class="sapUiSmallMarginBottom"
          value="{form>/fldate}"
          valueFormat="yyyy-MM-dd"/>
      </f:content>
      <Button id="btnSave"
        text="Save"
        type="Accept"
        press="onPress" />
    </f:SimpleForm>

    <Table id="tblFlights"
      inset="false"
      items="{/Flights}">

      <columns>
        <Column id="_IDGenColumn1"
          width="12em">
          <Text id="_IDGenText1"
            text="Airline" />
        </Column>
        <Column id="_IDGenColumn2"
          minScreenWidth="Tablet"
          demandPopin="true">
          <Text id="_IDGenText2"
            text="Connection" />
        </Column>
        <Column id="_IDGenColumn3"
          minScreenWidth="Desktop"
          demandPopin="true"
          hAlign="End">
          <Text id="_IDGenText3"
            text="Flight Date" />
        </Column>
        <Column id="_IDGenColumn5"
          hAlign="End">
          <Text id="_IDGenText5"
            text="Price" />
        </Column>
      </columns>
      <items>
        <ColumnListItem id="_IDGenColumnListItem1"
          vAlign="Middle"
          type="Navigation"
          press="handleListItemPressed">
          <cells>
            <Text id="_IDGenText"
              text="{carrID}" />
            <Text id="_IDGenText6"
              text="{connID}" />
            <Text id="_IDGenText7"
              text="{fldate}" />

            <ObjectNumber id="_IDGenObjectNumber2"
              number="{
								parts:[{path:'price'},{path:'currency_code'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
              unit="{currency_code}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>
