<mvc:View controllerName="hogent.flightapp.controller.List"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form">
  <Page id="page"
    title="{i18n>title}">
    <f:SimpleForm id="frmFlight"
      editable="true"
      layout="ResponsiveGridLayout"
      title="Add Flight"
      labelSpanXL="3"
      labelSpanL="3"
      labelSpanM="3"
      labelSpanS="12"
      adjustLabelSpan="false"
      emptySpanXL="4"
      emptySpanL="4"
      emptySpanM="4"
      emptySpanS="0"
      columnsXL="1"
      columnsL="1"
      columnsM="1"
      singleContainerFullSize="false">
      <f:content>
        <Label id="lblAirIn"
          text="Airline" />
        <Input id="formAirline"
          value="{form>/carrID}" />
        <Label id="lblFLIn"
          text="flight Number" />
        <Input id="_IDGenInput1"
          value="{form>/connID}">
        </Input>

        <Label id="_IDGenLabel3"
          text="Date" />
        <DatePicker id="DP1"
          
          
          
          
          
                                
                            value = "{form>/fldate}"
          valueFormat="yyyy-MM-dd"
          placeholder="Enter Date"
          change="handleChange"
          class="sapUiSmallMarginBottom"/>
      </f:content>
      <Button id="btnSave"
        type="Accept"
        text="Add Flight"
        press="handleSavePress">
      </Button>
    </f:SimpleForm>
    <OverflowToolbar id="_IDGenOverflowToolbar1">
      <SearchField id="_IDGenSearchField1"
        liveChange=".onSearch"
        width="100%" />
    </OverflowToolbar>
    <Table id="idFlightsTable"
      inset="false"
      items="{/Flights}">

      <columns>
        <Column id="clmAirline"
          width="12em">
          <Text id="lblAirline"
            text="Airline" />
        </Column>
        <Column id="clmFlightNum"
          minScreenWidth="Tablet"
          demandPopin="true">
          <Text id="lblFlightNum"
            text="Flight Number" />
        </Column>
        <Column id="clmFlightDate"
          minScreenWidth="Desktop"
          demandPopin="true"
          hAlign="End">
          <Text id="lblFlightDate"
            text="Flight Date" />
        </Column>
        <Column id="clmPrice"
          minScreenWidth="Desktop"
          demandPopin="true"
          hAlign="Center">
          <Text id="lblPrice"
            text="Price" />
        </Column>
      </columns>
      <items>
        <ColumnListItem id="_IDGenColumnListItem1"
          vAlign="Middle"
          type="Navigation"
          press="handleListItemPress">
          <cells>
            <Text id="txtCarrId"
              text="{carrID}" />
            <Text id="txtConnId"
              text="{connID}" />
            <Text id="txtFldate"
              text="{fldate}" />

            <ObjectNumber id="obnPrice"
              number="{
								parts:[{path:'price'},{path:'currency_code'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
              unit="{currency_code}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>
